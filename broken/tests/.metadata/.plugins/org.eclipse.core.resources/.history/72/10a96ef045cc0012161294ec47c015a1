package main.java;

public class Jeu {
	
	public Integer scoreJoueur1;

	public String score() {
		String scoreTextJoueur1;
		if (scoreJoueur1==0){
			scoreJoueur1="0";
		}else{
			scoreJoueur1="15";
		}
		return "0-0";
	}

	public Jeu() {
		super();
		scoreJoueur1=0;
	}

	public void joueur1Marque() {
		scoreJoueur1++;	
	}

}
